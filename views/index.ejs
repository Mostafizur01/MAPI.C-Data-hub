<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MAPI.C Data Hub</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.css">
    <link rel="icon" type="image/png" href="/images/logo.png" style="border-radius:50%;">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body data-scroll-container>
   <div class="loading <%= locals.token ? 'has-token' : 'no-token' %>">
    <% if (!locals.token) { %>
        <div class="transition-overlay">
            <div class="overlay-column"></div>
            <div class="overlay-column"></div>
            <div class="overlay-column"></div>
        </div>
        <div class="lodingAn">
            <div class="preloader" id="preloader">
                <div class="loading-circle"></div>
                <div class="loading-text">
                    LOADING... <span id="loading-count">0</span>%
                </div>
            </div>
        </div>
    <% } %>

    <main class="content" id="main-content">
        <header>
            <h1 class="main-title">Welcome to MAPI!</h1>
            <p class="main-subtitle">Computer Science And Technology</p>
        </header>
        <div class="cta-section">
            <img src="/images/logo.png" alt="Logo">
        </div>
    </main>
</div>

    <header class="main-header">
        <a href="/" class="logo header-logo">MAPI.C</a>

        <button class="nav-toggler" id="nav-toggler" aria-expanded="false" aria-controls="main-nav">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </button>

        <nav class="main-nav" id="main-nav">
            <ul>
                <li class="dropdown-item">
                    <a class="Academincs" href="/academics">ACADEMICS <span class="dropdown-icon">▼</span></a>
                    <div class="academincs">
                        <ul>
                            <li><a href="/academics/teachers">Teachers</a></li>
                            <li><a href="/academics/students">Students</a></li>
                            <li><a href="/academics/form">Form</a></li>
                        </ul>
                    </div>
                </li>
                <li class="dropdown-item">
                    <a href="/research">RESEARCH <span class="dropdown-icon">▼</span></a>
                    <div class="academincs">
                        <ul>
                            <li><a href="/research/overview">Overview</a></li>
                            <li><a href="/projects/all-projects">Projects</a></li>
                        </ul>
                    </div>
                </li>

                <li class="dropdown-item">
                    <a href="/admissions">ADMISSIONS <span class="dropdown-icon">▼</span></a>
                    <div class="academincs">
                        <ul>
                            <li><a href="/admissions/undergraduate">Undergraduate</a></li>
                            <li><a href="/admissions/graduate">Graduate</a></li>
                        </ul>
                    </div>
                </li>
                <li class="dropdown-item">
                    <a href="/snu-now">MAPI NOW<span class="dropdown-icon">▼</span></a>
                    <div class="academincs">
                        <ul>
                            <li><a href="/snu-now/news">News</a></li>
                            <li><a href="/snu-now/events">Events</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Center logo (desktop only) -->
                <a href="/" class="logo nav-logo">MAPI.C</a>

                <li class="dropdown-item">
                    <a href="/campus-life">CAMPUS LIFE <span class="dropdown-icon">▼</span></a>
                    <div class="academincs">
                        <ul>
                            <li><a href="/campus-life/clubs">Clubs</a></li>
                            <li><a href="/campus-life/housing">Housing</a></li>
                        </ul>
                    </div>
                </li>

                <!-- About -->
                <li class="dropdown-item">
                    <a href="/about">ABOUT <span class="dropdown-icon">▼</span></a>
                    <div class="academincs">
                        <ul>
                            <li><a href="/about/our-story">Our Story</a></li>
                            <li><a href="/about/contact">Contact</a></li>
                        </ul>
                    </div>
                </li>
                <% if (locals.token) { %>
    <li>
        <a href="/profile" class="profile" title="Profile">
            <i class="ri-user-line"></i>
        </a>
    </li>
<% } else { %>
    <li><a href="/signin">SIGN IN</a></li>
    <li><a href="/signup">SIGN UP</a></li>
<% } %>
            </ul>
        </nav>
    </header>
    <section>
        <main>
            <div class="page1" id="page1">
                <video class="video-dark" id="video-dark" src="/videos/college video.mp4" playsinline preload="auto"
                    muted loop autoplay></video>
                <div class="video-light-overlay" id="video-light-overlay"></div>
                <div class="dark"></div>
            </div>
            <div class="page2">
                <h1>Latest Events</h1>
                <div class="cards">
                    <% if (events && events.length> 0) { %>
                        <% events.slice(0, 6).forEach(function(event) { %>
                            <div class="card1">
                                <a href="/event/<%= event._id %>">
                                    <img src="<%= event.image %>" alt="<%= event.title %>">
                                    <h3>
                                        <%= event.title %>
                                    </h3>
                                    <p>
                                        <%= event.paragraph.substring(0, 60) %>...
                                    </p>
                                    <i class="ri-arrow-right-fill"></i>
                                </a>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p>No events found.</p>
                                    <% } %>
                </div>
            </div>
            <div class="news-container">
                <% if (locals.news && news.length> 0) { %>
                    <div class="news-grid">
                        <% news.slice(0, 6).forEach((item, index)=> { %>
                            <div class="news-card" data-scroll data-scroll-speed="<%= index % 2 === 0 ? '1' : '1.5' %>">
                                <div class="card-img-wrapper">
                                    <img src="<%= item.image %>" alt="<%= item.title %>">
                                </div>
                                <div class="card-content">
                                    <span class="date">Latest Update</span>
                                    <h2>
                                        <%= item.title %>
                                    </h2>
                                    <p>
                                        <%= item.paragraph.substring(0, 100) %>...
                                    </p>
                                    <a href="/event/<%= item._id %>" class="read-more">
                                        Explore <i class="ri-arrow-right-line"></i>
                                    </a>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p class="no-news">No news available at the moment.</p>
                        <% } %>
            </div>
            <div class="page3" data-scroll data-scroll-speed="0.5">
                <section class="gallery-section" data-scroll data-scroll-speed="0.5">
                    <div class="container">
                        <h1 class="section-title" data-scroll data-scroll-speed="10" data-scroll-direction="horizontal">
                            Magura Polytechnic Institute
                        </h1>

                        <div class="photo-grid">
                            <div class="photo-card">
                                <img src="/images/fullcollege.jpg" alt="College Building">
                                <div class="overlay">
                                    <span>Main Building</span>
                                </div>
                            </div>
                            <div class="photo-card">
                                <img src="/images/getText.jpg" alt="Campus Life">
                                <div class="overlay">
                                    <span>Academic Life</span>
                                </div>
                            </div>
                            <div class="photo-card">
                                <img src="/images/entry.jpg" alt="Entrance">
                                <div class="overlay">
                                    <span>Main Entrance</span>
                                </div>
                            </div>
                            <div class="photo-card">
                                <img src="/images/campuss.jpg" alt="Campus View">
                                <div class="overlay">
                                    <span>Green Campus</span>
                                </div>
                            </div>
                        </div>

                        <div class="action-area">
                            <a href="/photos" class="btn-more">View All Photos &rarr;</a>
                        </div>
                    </div>
                </section>
            </div>
            <div class="page4">
                <div class="slider-container">
                    <div class="filter"></div>
                    <div class="bg-wrapper">
                        <div class="bg-slide active" style="background-image: url('/images/frontOfCollege.jpg')"></div>
                        <div class="bg-slide" style="background-image: url('/images/campuss.jpg')"></div>
                        <div class="bg-slide" style="background-image: url('/images/entry.jpg')"></div>
                        <div class="bg-slide" style="background-image: url('/images/consol.log1.jpg')"></div>
                    </div>
                    <div class="fg-container">
                        <div class="nav-icon prev" id="prevBtn"><i class="ri-arrow-left-s-line"></i></div>
                        <div class="nav-icon next" id="nextBtn"><i class="ri-arrow-right-s-line"></i></div>

                        <div class="fg-wrapper">
                            <div class="fg-slide active">
                                <img src="/images/frontOfCollege.jpg" alt="Slide 1">
                            </div>
                            <div class="fg-slide">
                                <img src="/images/campuss.jpg" alt="Slide 2">
                            </div>
                            <div class="fg-slide">
                                <img src="/images/entry.jpg" alt="Slide 3">
                            </div>
                            <div class="fg-slide">
                                <img src="/images/consol.log1.jpg" alt="Slide 3">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer>
                <div data-scroll data-scroll-speed="-0.5" class="top">
                    <h1>MAGURA POLYTECHNIC INSTITUTE</h1>
                </div>
                <div class="bottom">
                    <div class="row1">
                        <h4>ACADEMICS</h4>
                        <ul>
                            <a href="">
                                <li>Teachers</li>
                            </a>
                            <a href="">
                                <li>Students</li>
                            </a>
                            <a href="">
                                <li>Form</li>
                            </a>
                        </ul>
                        <h4>RESEARCH</h4>
                        <ul>
                            <a href="">
                                <li>Overview</li>
                            </a>
                            <a href="">
                                <li>Projects</li>
                            </a>
                        </ul>
                    </div>
                    <div class="row2">
                        <h4>ADMISSIONS</h4>
                        <ul>
                            <a href="">
                                <li>Undergraduate</li>
                            </a>
                            <a href="">
                                <li>Graduate</li>
                            </a>
                        </ul>
                        <h4>SUN NOW</h4>
                        <ul>
                            <a href="">
                                <li>News</li>
                            </a>
                            <a href="">
                                <li>Events</li>
                            </a>
                        </ul>
                        <div class="opic">
                            <img src="" alt="">
                        </div>
                    </div>
                    <div class="row3">
                        <h4>CAPUS LIFE</h4>
                        <ul>
                            <a href="">
                                <li>Clubs</li>
                            </a>
                            <a href="">
                                <li>Housing</li>
                            </a>
                        </ul>
                        <h4>ABOUT</h4>
                        <ul>
                            <a href="">
                                <li>Our story</li>
                            </a>
                            <a href="">
                                <li>Contact</li>
                            </a>
                        </ul>
                    </div>
                </div>
                <div class="copy">
                    <p>&copy; <span id="year"></span> MMR. All rights reserved.</p>
                </div>
            </footer>
        </main>
    </section>



